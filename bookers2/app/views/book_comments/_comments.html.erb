<% book.book_comments.each do |book_comment| %>
  <tbody class="table">
    <tr>
      <td>
        <%= attachment_image_tag book_comment.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: '60x60' %>
        <br>
        <%= link_to book_comment.user.name, user_path(book_comment.user.id) %>
      </td>
        <td><%= book_comment.comment %></td>
        <% if book_comment.user == current_user %>
          <td><%=link_to 'Destroy', book_book_comment_path(book_comment.book, book_comment), class: 'btn btn-danger', method: :delete, remote: true, "data-confirm" => "本当に削除しますか？" %></td>
        <% end %>
    <tbody>
<% end %>