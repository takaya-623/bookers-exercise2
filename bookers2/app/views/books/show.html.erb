<h1>User info</h1>

<div>
  <h1>New book</h1>
  <%= form_with model: @Book, local:true do |f |%>
    <h4>Tile</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    <p><%= f.submit 'Create Book' %></p>
  <% end %>
</div>

<h1>Book detail</h1>
<table>
    <tbody class="table">
      <tr>
        <td>投稿ユーザー画像※後で追加</td>
        <td><%= @book.title %></td>
        <td><%= @book.body %></td>
        <% if @book.user == current_user %>
        <td><%=link_to 'Edit', edit_book_path(@book) %></td>
        <td><%=link_to 'Destroy', book_path(@book), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
        <% end %>
      </tr>
    </tbody>
</table>

