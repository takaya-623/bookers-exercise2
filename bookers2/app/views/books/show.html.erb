<p class="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= render "users/info", info: @book.user %>
    
      <h2>New book</h2>
        <%= render "users/form", obj: @Book %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table>
          <tbody class="table">
            <tr>
              <td>
                <%= link_to user_path(@book.user) do %>
                  <%= attachment_image_tag @book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: '60x60' %>
                <% end %>
                <br><%= link_to @book.user.name, user_path(@book.user.id) %>
              </td>
              <td><%= link_to @book.title, book_path(@book.id) %></td>
              <td><%= @book.body %></td>
              
              <%= render "favorite", obj: @book %>
              <td>コメント数:<%=@book.book_comments.count %></td>
              
              <% if @book.user == current_user %>
                <td><%=link_to 'Edit', edit_book_path(@book), class: 'btn btn-success' %></td>
                <td><%=link_to 'Destroy', book_path(@book), class: 'btn btn-danger', method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
              <% end %>
            </tr>
          </tbody>
      </table>
      <table>
        <% @book.book_comments.each do |book_comment| %>
          <tbody class="table">
            <tr>
              <td>
                <%= attachment_image_tag book_comment.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: '60x60' %>
                <br>
                <%= link_to book_comment.user.name, user_path(book_comment.user.id) %>
              </td>
                <td><%= book_comment.comment %></td>
                <% if book_comment.user == current_user %>
                  <td><%=link_to 'Destroy', book_book_comment_path(book_comment.book, book_comment), class: 'btn btn-danger', method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
                <% end %>
            <tbody>
        <% end %>
      </table>
        <%= form_with(model:[@book, @book_comment], local: true) do |f| %>
          <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに" %><br>
          <%= f.submit "送信" %>
        <% end %>
    </div>
  </div>
</div>


