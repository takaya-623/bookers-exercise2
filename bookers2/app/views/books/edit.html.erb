<div>
  <h1>Editing book</h1>
  <%= form_with model: @book, local:true do |f |%>
    <h4>Tile</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    <p><%= f.submit 'Update Book' %></p>
    <%= link_to 'Show', book_path(@book.id) %> |
    <%= link_to 'Back', books_path %>
  <% end %>
</div>