<main class="mt-4">
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5">
        <h1>Editing Book</h1>
          <%= render 'layouts/errors', obj: @book %>
        
          <%= form_with model: @book, local:true do |f |%>
            <p>Tile</p>
            <%= f.text_field :title, class: 'w-100 mb-2' %>
            <p>Opinion</p>
            <%= f.text_area :body, class: 'w-100 mb-2' %>
            <p><%= f.submit 'Update Book', class: 'create' %></p>
            <%= link_to 'Show', book_path(@book.id) %> |
            <%= link_to 'Back', books_path %>
          <% end %>
    </div>
  </div>
</main>
