<div class="container mt-4">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= render "users/user_info" %>


      <h2>New book</h2>
        <% if @book.errors.any? %>
        <div class="error_explanation">
          <div class="error_head">
          <h2 class="error_head_text"><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
          </div>
          <ul class="error_message">
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
        <% end %>
        
        <%= render "users/form", obj: @book %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <% @books.each do |book| %>
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(book.user) do %>
                  <%= attachment_image_tag book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: '60x60' %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
              
              <%= render "favorite", obj: book %>
              
              <td>コメント数:<%=book.book_comments.count %></td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
