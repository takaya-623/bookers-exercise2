<h1>User info</h1>

<div>
  <h1>New book</h1>
  <%= form_with model: @book, local:true do |f |%>
    <h4>Tile</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    <p><%= f.submit 'Create Book' %></p>
  <% end %>
</div>

<div>
  <h1>Books</h1>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <% @books.each do |book| %>
      <tbody>
        <tr>
          <td>投稿ユーザー画像※後で追加</td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
      </tbody>
    <% end %>
  </table>
</div>
