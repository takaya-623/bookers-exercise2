<main class="mt-4">
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5">
        <h1>User info</h1>
        <% if @user.errors.any? %>
          <div class="error_explanation">
            <div class="error_head">
            <h2 class="error_head_text"><%= pluralize(@user.errors.count, "error") %> prohibited this book from being saved:</h2>
            </div>
            <ul class="error_message">
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        
          <%= form_with model:@user, local:true do |f| %>
            <p><label for="inputName">Name</label></p>
            <p><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", class: 'w-100 mb-2'%></p>
            <p><label for="inputImage">Image</label></p>
            <p><%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %></p>
            <p><label for="inputIntroduction">Introduction</label></p>
            <p><%= f.text_area :body, class: 'w-100 mb-2' %></p>
            <p><%= f.submit "Update User", class: 'create' %></p>
          <% end %>
    </div>
  </div>
</main>